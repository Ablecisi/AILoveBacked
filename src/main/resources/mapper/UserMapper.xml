-->
<mapper namespace="com.ablecisi.ailovebacked.mapper.UserMapper">
    <update id="updateUser">
        UPDATE user
        <set>
            <if test="username != null">username = #{username},</if>
            <if test="password != null">password = #{password},</if>
            <if test="name != null">name = #{name},</if>
            <if test="description != null">description = #{description},</if>
            <if test="avatarUrl != null">avatar_url = #{avatarUrl},</if>
            <if test="followingCount != null">following_count = #{followingCount},</if>
            <if test="followersCount != null">followers_count = #{followersCount},</if>
            update_time = NOW(),
        </set>
    </update>

    <select id="getUserById" resultType="User">
        SELECT *
        FROM user
        WHERE id = #{userId}
    </select>
    <select id="getUserByUsername" resultType="com.ablecisi.ailovebacked.pojo.entity.User">
        <!-- 根据用户名和密码查询用户 -->
        SELECT * FROM user
        WHERE username = #{username}
    </select>
</mapper>
